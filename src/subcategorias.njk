---
pagination:
  data: subcategorias
  size: 1
  alias: subcategoria
permalink: /{{ subcategoria.category.name | slug }}/{{ subcategoria.name | slug }}/index.html
---

{% extends "layouts/default.njk" %}
    {% block meta %}
 	<title>{{ subcategoria.title }}</title>
	<meta name="description" content="{{ subcategoria.seo.description }}">
	<meta name="keywords" content="">

	<meta property="og:url" content="https://hypebeast.pro/{{ subcategoria.category.name | slug }}/{{ subcategoria.name | slug }}" />
	<meta property="og:type" content="article" />
	<meta property="og:title" content="{{ subcategoria.seo.title }}" />
	<meta property="og:description" content="{{ subcategoria.seo.description }}" />
	<meta property="og:image" content="https://hypebeast.pro{{ subcategoria.image.url }}" />

    <meta name="twitter:card"  content="summary">
    <meta name="twitter:url" content="https://hypebeast.pro/{{ subcategoria.name | slug}}">
    <meta name="twitter:title" content="{{ subcategoria.seo.title }}">
    <meta name="twitter:description" content="{{ subcategoria.seo.description }}">
    <meta name="twitter:image" content="https://hypebeast.pro{{ subcategoria.image.url }}">
        
    {% endblock %}
{% block content %}
    <section class="categorias-n2-intro">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center">
                    <h1>{{ subcategoria.name }}</h1>
                </div>
                <div class="col text-center texto">
                    <p>{{subcategoria.description | safe }}</p>
                </div>
            </div>
        </div>
    </section>

    <section class="productos">
        <div class="container">
            <div class="row">
                {% for producto in productos %}
                    {% for sub in producto.subcategory %}
                        {% if sub.name == subcategoria.name %}
                            <div class="col-12 col-md-6 col-lg-4 text-center mb-5">
                                <article class="producto">
                                    <a href="{{producto.urlAmazon}}" target="_blank">
                                        <img src= "{{ producto.image }}" alt="{{producto.name}}">
                                    </a>
                                    <h2>{{ producto.name }}</h2>
                                    <h5>{{ producto.price }}€</h5>
                                    <button  type="button" class="btn btn-warning"><a class="comprar" href="{{producto.enlace}}" target="_blank">Comprar</a></button>
                                </article>
                            </div>
                        {% endif %}               
                    {% endfor %}
                {% endfor %}
            </div>
        </div>
    </section>

