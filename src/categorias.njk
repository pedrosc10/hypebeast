---
pagination:
  data: categorias
  size: 1
  alias: categoria
permalink: /{{ categoria.nombre | slug }}/index.html
---

{% extends "layouts/default.njk" %}
{% block meta %}
 	<title>{{ categoria.title }}</title>
	<meta name="description" content="{{categoria.descripcion}}">
	<meta name="keywords" content="">

	<meta property="og:url" content="https://hypebeast.pro/{{ categoria.nombre | slug}}" />
	<meta property="og:type" content="article" />
	<meta property="og:title" content="{{ categoria.title }}" />
	<meta property="og:description" content="{{ categoria.descripcion }}" />
	<meta property="og:image" content="https://hypebeast.pro{{ categoria.img }}" />

    <meta name="twitter:card"  content="summary">
    <meta name="twitter:url" content="https://hypebeast.pro/{{ categoria.nombre | slug}}">
    <meta name="twitter:title" content="{{ categoria.title }}">
    <meta name="twitter:description" content="{{ categoria.descripcion }}">
    <meta name="twitter:image" content="https://hypebeast.pro{{ categoria.img }}">
{% endblock %}
{% block content %}

    <section class="categorias-intro texto">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center">
                    <h1>{{ categoria.nombre }}</h1>
                </div>
                <div class="col text-center texto">
                    <p>{{ categoria.descripcion }}</p>
                </div>
            </div>
        </div>
    </section>

    <section class="categorias-n2">
        <div class="container">
                    <div class="row">
                        {% for subcategoria in subcategorias %}
                        {% if (subcategoria.id.slice(0,2)) == categoria.id %}
                        <div class="col-12 col-md-6 col-lg-4 text-center subcategoria">
                            <a href="/{{ categoria.nombre | slug }}/{{ subcategoria.nombre | slug }}"><img src="{{ subcategoria.img }}" alt="{{subcategoria.nombre}}"></a>
                            <h2>{{subcategoria.nombre}}</h2>
                            <p>{{subcategoria.intro}}</p>
                        </div>
                        {% endif %}            
                        {% endfor %}
        </div>
    </section>

